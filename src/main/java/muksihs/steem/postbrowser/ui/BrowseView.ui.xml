<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:x="urn:import:muksihs.steem.postbrowser.ui">
	<ui:style>
	
	</ui:style>
	<m:MaterialPanel>
		<m:MaterialPanel
			style='text-align: right; margin-top: 2px;' ui:field="menu">
			<m:MaterialPanel>
				<m:MaterialLabel ui:field="indexingUsername"
				style="display: inline-block; margin: 2px; margin-right: 12px;"/>
				<m:MaterialLabel ui:field="totalBlogEntries"
				style="display: inline-block; margin: 2px; margin-right: 12px;"/>
				<m:MaterialButton ui:field="clearFilter"
					style='margin: 2px;' text="Clear Filter" />
				<m:MaterialButton ui:field="activeTags"
					style='margin: 2px;' text="Active Filters" />
				<m:MaterialButton ui:field="availableTags"
					style='margin: 2px;' text="Available Filters" />
				<m:MaterialButton ui:field="loadFilter"
					style='margin: 2px;' text="Load Filter" />
				<m:MaterialButton ui:field="saveFilter"
					style='margin: 2px;' text="Save Filter" />
			</m:MaterialPanel>
			<m:MaterialPanel>
				<m:MaterialButton ui:field="mostRecent"
					style='margin: 2px;' text="Most Recent" />
				<m:MaterialButton ui:field="previous"
					style='margin: 2px;' text="Previous" />
				<m:MaterialButton ui:field="next"
					style='margin: 2px;' text="Next" />
			</m:MaterialPanel>
		</m:MaterialPanel>
		<m:MaterialPanel
			style="text-align: center; margin-bottom: 4px;" ui:field="posts" />

		<m:MaterialPanel
			style='text-align: right; padding-top: 4px;' ui:field="menuBtm">
			<m:MaterialButton ui:field="previousBtm"
				style='margin: 2px;' text="Previous" />
			<m:MaterialButton ui:field="nextBtm"
				style='margin: 2px;' text="Next" />
		</m:MaterialPanel>
	</m:MaterialPanel>
</ui:UiBinder> 